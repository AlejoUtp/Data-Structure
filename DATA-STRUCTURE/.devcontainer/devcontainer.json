{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "echo 'Running post-create.sh' && /bin/bash .devcontainer/post_create.sh",
  "remoteUser": "devuser",
  "customizations": {
    "vscode": {
      "extensions": [
        "xaver.clang-format",
        "vadimcn.vscode-lldb",
        "ms-vscode.cpptools"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "C_Cpp.clang_format_path": "/usr/bin/clang-format",
        "C_Cpp.clang_format_fallbackStyle": "file",
        "editor.formatOnSave": true
      }
    }
  },
  "remoteEnv": {
    "DISPLAY": "host.docker.internal:0"
  },
  "forwardPorts": [
    4000
  ],
  "containerEnv": {
    "SHELL": "/bin/bash"
  }
}