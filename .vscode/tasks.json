{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build current file",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-std=c++20",
        "-g",
        "-fno-limit-debug-info",
        "-fdebug-macro",
        "-O0",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
    }
  ]
}